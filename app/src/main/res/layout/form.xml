        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:imageReference="@drawable/form1"
        />

    <TextView
        android:id="@+id/agent"
        android:layout_width="790dp"
        android:layout_height="98dp"
        android:background="#999999"
        android:textSize="50dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:hint="PRZEDSTAWICIEL MEDYCZNY"
        android:textColorHint="#EEFFFFFF"
        android:layout_marginTop="395dp"
        android:layout_marginLeft="565dp"
        />

    <TextView
        android:id="@+id/lekarz"
        android:layout_width="790dp"
        android:layout_height="98dp"
        android:background="#999999"
        android:textSize="50dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:hint="IMIÄ˜ I NAZWISKO LEKARZA"
        android:textColorHint="#EEFFFFFF"
        android:layout_marginTop="633dp"
        android:layout_marginLeft="565dp"
        />

    <View
        android:id="@+id/next"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_gravity="right|bottom"
        />
</pl.pharmaway.prezentacjatrilac.view.FixedScaledLayout>